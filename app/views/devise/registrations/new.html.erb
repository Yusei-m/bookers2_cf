<p id="notice"></p>
        <div class="container">
           <% if @user.errors.any? %>
  <%= @user.errors.count %>errors prohibited this obj from being saved:
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0">
      <h2>Sign up</h2>
         <%= form_with model: @user, url: user_registration_path do |f| %>
              <div class="field">
                <label for="user_name">Name</label><br>
               <%= f.text_field :name, autofocus: true, id:"inputName"%>
              </div>
              <div class="field">
                 <%= f.label :email %><br/>
                  <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
              </div>
              <div class="field">
                <%= f.label :password %>
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %><br />
                <%= f.password_field :password, autocomplete: "new-password" %>
              </div>
              <div class="field">
                <%= f.label :password_confirmation %><br />
                <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
              </div>
              <div class="actions">
              <%= f.submit "Sign up",class: "btn btn-sm btn-success" %>
              </div>
       <% end %>
          <%= link_to "Login", new_user_session_path, class: 'nav-link text-light'%><br>
        </div>
  </div>
</div>
